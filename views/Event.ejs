<% layout("layouts/standart") %>
<div class="container">
  <h1>Events</h1>

  <a href="/add_event" class="btn btn-primary">Add Event</a>

  <div class="row">
    <% for (let i = 0; i < events.length; i++) { %>
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <img class="card-img-top" src="<%= events[i].photoUrl %>" alt="Event Image">
          <div class="card-body">
            <h5 class="card-title"><%= events[i].eventName %></h5>
            <p class="card-text"><%= events[i].date %></p>
            <p class="card-text">Created by: <%= couples[i][0] %> and <%= couples[i][1] %></p>
          </div>
        </div>
      </div>
      <% if ((i + 1) % 3 === 0) { %>
        </div><div class="row">
      <% } %>
    <% } %>
  </div>
</div>